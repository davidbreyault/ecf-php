{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}

    <section>
        <div class="container">
            <div class="profile-header unique-item">
                <a href="{{ path('profile') }}" class="cta">Retour</a>
            </div>
            <h1>Formulaire de candidature</h1>
            {% if is_granted('ROLE_USER') and not is_granted('ROLE_EMPLOYEE') %}

                {{ form_start(application_form, {'attr': {'class': 'form application-form'}}) }}
                {{ form_end(application_form) }}
                
            {% endif %}
        </div>
    </section>

{% endblock %}

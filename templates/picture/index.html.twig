{% extends 'base.html.twig' %}

{% block title %}Modifier votre photo de profil{% endblock %}

{% block body %}

    <section>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="success">
                    <div class="container">
                        <div>{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="container">
            <div class="profile-header">
                <h1>Mon espace personnel</h1>
                <a href="{{ path('profile') }}" class="cta">Retour</a>
            </div>
            <div class="profile-infos">

                {% block profile_data %}
                    {% include "profile/profile_data.html.twig" %}
                {% endblock %}

                <div class="profile-dashboard">
                    <h2>Modifier votre photo de profil</h2>
                    {% if picture.name is defined and picture.name is not null %}

                        <div class="file">
                            <i class="fas fa-camera"></i>
                            <p>{{ picture.name }}</p>
                        </div>
                        
                    {% else %}

                        <p>Vous n'avez pas encore ajout√© votre photo de profil.</p>
                        {{ form_start(upload_form, { 'attr': {'class': 'form upload-form'} }) }}
                        {{ form_end(upload_form) }}

                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Mon espace personnel{% endblock %}

{% block body %}
    <section class="profile">
        <div class="container">
        {% if is_granted('ROLE_EMPLOYEE') %}

            <div class="profile-header">
                <h1>Mon espace personnel</h1>
                <a href="{{ path('profile') }}" class="cta">Retour</a>
            </div>
            <div class="profile-infos">
                {% block profile_data %}
                    {% include "profile/profile_data.html.twig" %}
                {% endblock %}

                <div class="profile-dashboard profile-skills">
                    <h2>Mes compétences</h2>
                    <a href="{{ path('add_skill') }}" class="cta add"><i class="fas fa-plus"></i></a>
                    {% if skills %}
                        <ul class="skills-list">
                            {% for skill in skills %}
                                <li class="skill">
                                    <div class="skill-header">
                                        <a href="{{ path('update_skill', {'id': skill.id}) }}" class="update"><i class="fas fa-pen"></i></a>
                                        <a href="{{ path('delete_skill', {'id': skill.id}) }}" class="delete"><i class="fas fa-times-circle"></i></a>
                                    </div>
                                    <h3>{{ skill.name }}</h3>
                                    <p>{{ skill.category.name }}</p>
                                    <div class="skill-level">
                                        <p class="rating hidden">{{ skill.level }}</p>
                                        <i class="far fa-circle"></i>
                                        <i class="far fa-circle"></i>
                                        <i class="far fa-circle"></i>
                                        <i class="far fa-circle"></i>
                                        <i class="far fa-circle"></i>
                                    </div>
                                    <div class="skill-like">
                                        {% if skill.appreciated == 1 %}
                                            <i class="far fa-thumbs-up"></i>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Vous n'avez pas encore ajouté vos compétences.</p>
                    {% endif %}
                </div>
            </div>
                
        {% endif %}
        </div>
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="success">
                    <div class="container">
                        <div>{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Modifiez votre compétence{% endblock %}

{% block body %}

    <section>
        <div class="container">
            {% if is_granted('ROLE_EMPLOYEE') %}

                <div class="profile-header cta-right">
                    <a href="{{ path('skills') }}" class="cta">Retour</a>
                </div>
                <h1>Modifiez votre compétence</h1>
                {{ form_start(skill_form, {'attr': {'class': 'form'}}) }}
                
                    {{ form_row(skill_form.name) }}
                    {{ form_row(skill_form.level) }}
                    {{ form_row(skill_form.appreciated) }}
                    {{ form_row(skill_form.category) }}
                    {{ form_row(skill_form.send, {'label': 'Modifier'}) }}
                    
                {{ form_end(skill_form) }}
                
            {% endif %}
        </div>
    </section>

{% endblock %}

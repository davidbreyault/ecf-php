{% extends 'base.html.twig' %}

{% block title %}Ajoutez une expérience{% endblock %}

{% block body %}

    <section>
        <div class="container">
            {% if is_granted('ROLE_EMPLOYEE') %}
                
                <div class="profile-header cta-right">
                    <a href="{{ path('experiences') }}" class="cta">Retour</a>
                </div>
                <h1>Ajoutez une expérience</h1>
                {{ form_start(experience_form, {'attr': {'class': 'form'}}) }}
                {{ form_end(experience_form) }}

            {% endif %}
        </div>
    </section>
    
{% endblock %}
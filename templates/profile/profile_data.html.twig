{% block profile_data %}
    <div class="profile-data">
        <img src="https://eu.ui-avatars.com/api/?name={{ user.firstname }}+{{ user.lastname }}&size=120&background=FFD900&color=000" alt="profile-picture">
        <h2>{{ user.firstname }} {{ user.lastname }}</h2>
        
        {% block profile_roles %}
            {% include "profile/profile_roles.html.twig" %}
        {% endblock %}

        {% if user.address %}
            <div class="data">
                <p><span>Adresse :</span>{{ user.address }}</p>
            </div>
            <div class="data">
                <p><span>Code postal :</span>{{ user.postcode }}</p>
            </div>
            <div class="data">
                <p><span>Ville :</span>{{ user.town }}</p>
            </div>
            <div class="data">
                <p><span>Email :</span>{{ user.email }}</p>
            </div>
            <div class="data">
                <p><span>Téléphone :</span>{{ user.phoneNumber }}</p>
            </div>
            <div class="data">
                <p><span>Date de naissance :</span>{{ user.birth|date('F j, Y') }}</p>
            </div>
            <div class="data">
                <p><span>Age :</span>{{ date('now').diff((date(user.birth))).format('%y ans') }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <header class="header">
            <div class="container">
                <nav class="header-nav">
                    <div class="logo"><a href="{{ path('home') }}">Accueil</a></div>
                    <ul class="header-nav-links">
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="{{ path('profile') }}">{{ app.user.firstname }} {{ app.user.lastname }}</a></li>
                            <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                        {% else %}
                            <li><a href="{{ path('register') }}">S'inscrire</a></li>
                            <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </header>
        
        {% block body %}{% endblock %}
        
        <footer class="footer">
            <div class="container">
                <nav class="footer-nav">
                    <p class="copyright">© 2021 - l'entreprise</p>
                    <ul class="footer-nav-social">
                        <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
                        <li><a href="#"><i class="fab fa-github"></a></i></li>
                    </ul>
                </nav>
            </div>
        </footer>
    </body>
</html>

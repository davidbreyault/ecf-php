{% extends 'base.html.twig' %}

{% block title %}Tous les profils{% endblock %}

{% block body %}

    <section>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="success">
                    <div class="container">
                        <div>{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="container">
            {% if is_granted('ROLE_COMMERCIAL') %}

                <div class="profile-header">
                    <h1>Mon espace personnel</h1>
                    <a href="{{ path('members') }}" class="cta">Retour</a>
                </div>
                <div class="profile-infos">
                    {% block profile_data %}
                        {% include "profile/profile_data.html.twig" %}
                    {% endblock %}

                    <div class="profile-dashboard">

                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="actions-cta">
                                {% if profile.isEmployed == 0 %}
                                    <a href="{{ path('takeon_candidate', {'id': profile.id}) }}" class="cta">Embaucher {{ profile.firstname }}</a>
                                {% endif %}
                                {# EmpÃªche l'administrateur de supprimer son propre compte #}
                                {% if user.email != profile.email %}
                                    <a href="{{ path('delete_member', {'id': profile.id}) }}" class="cta delete">Supprimer l'utilisateur</a>
                                {% endif %}
                            </div>
                        {% endif %}

                        {% block card_infos %}
                            {% include "member/card_info.html.twig" %}
                        {% endblock %}

                        {% block card_skill %}
                            {% include "member/card_skill.html.twig" %}
                        {% endblock %}

                        {% block card_experience %}
                            {% include "member/card_experience.html.twig" %}
                        {% endblock %}

                    </div>
                </div>
                
            {% endif %}
        </div>
    </section>

{% endblock %}

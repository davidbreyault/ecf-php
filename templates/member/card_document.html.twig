{% block card_document %}

    <div class="member-documents">
        <h2>Documents de {{ profile.firstname }}</h2>
        {% if file %}

            <div class="file">
                <i class="far fa-file-pdf"></i>
                <p>{{ file.name }}</p>
            </div>
            <a href="{{ absolute_url(asset('uploads/' ~ file.name)) }}" class="cta" target="_blank">Consulter</a>

        {% else %}

            <p>{{ profile.firstname }} n'a pas encore ajout√© de document.</p>

        {% endif %}
    </div>

{% endblock %}
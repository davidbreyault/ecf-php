{% extends 'base.html.twig' %}

{% block title %}Ajoutez une technologie{% endblock %}

{% block body %}

    <section>
        <div class="container">
            {% if is_granted('ROLE_ADMIN') %}
                
                <div class="profile-header cta-right">
                    <a href="{{ path('technologies') }}" class="cta">Retour</a>
                </div>
                <h1>{{ (technology is defined) ? 'Modifier' : 'Ajouter' }} une technologie</h1>
                {{ form_start(technology_form, {'attr': {'class': 'form'}}) }}

                    {{ form_row(technology_form.name) }}
                    {{ form_row(technology_form.category) }}
                    {% if technology is defined %}
                        
                        {{ form_row(technology_form.send, {'label': 'Modifier'}) }}
                    
                    {% else %}
                        
                        {{ form_row(technology_form.send, {'label': 'Ajouter'}) }}
                    
                    {% endif %}

                {{ form_end(technology_form) }}

            {% endif %}
        </div>
    </section>

{% endblock %}
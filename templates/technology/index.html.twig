{% extends 'base.html.twig' %}

{% block title %}Technologies{% endblock %}

{% block body %}

    <section>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="success">
                    <div class="container">
                        <div>{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="container">
            {% if is_granted('ROLE_ADMIN') %}

                <div class="profile-header">
                    <h1>Mon espace personnel</h1>
                    <a href="{{ path('profile') }}" class="cta">Retour</a>
                </div>
                <div class="profile-infos">

                    {% block profile_data %}
                        {% include "profile/profile_data.html.twig" %}
                    {% endblock %}
                    
                    <div class="profile-dashboard">
                        <h2>Technologies</h2>
                        <a href="{{ path('add_technology') }}" class="cta add"><i class="fas fa-plus"></i></a>
                        {% if technologies is not null %}

                            <ul class="categories-list">
                                {% for technology in technologies %}
                                    <li class="category">
                                        <div class="category-header">
                                            <h3>{{ technology.name }}</h3>
                                            <div class="actions">
                                                <a href="{{ path('update_technology', {'id': technology.id}) }}" class="update"><i class="fas fa-pen"></i></a>
                                                <a href="{{ path('delete_technology', {'id': technology.id}) }}" class="delete"><i class="fas fa-times-circle"></i></a>
                                            </div>
                                        </div>
                                        <p>{{ technology.getCategory().getName() }}</p>
                                    </li>
                                {% endfor %}
                            </ul>

                        {% endif %}
                    </div>
                </div>

            {% endif %}
        </div>
    </section>

{% endblock %}


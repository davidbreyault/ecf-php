{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}

    <section>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="success">
                    <div class="container">
                        <div>{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="container">
            {% if is_granted('ROLE_USER') %}

                <div class="profile-header">
                    <h1>Mon espace personnel</h1>
                    <a href="{{ path('profile') }}" class="cta">Retour</a>
                </div>
                <div class="profile-infos">

                    {% block profile_data %}
                        {% include "profile/profile_data.html.twig" %}
                    {% endblock %}
                    
                    <div class="profile-dashboard">
                        <h2>Modification du mot de passe</h2>
                        {{ form_start(new_password_form , { 'attr': {'class': 'form new-password-form'} }) }}
                        {{ form_end(new_password_form) }}
                    </div>
                </div>

            {% endif %}
        </div>
    </section>

{% endblock %}

